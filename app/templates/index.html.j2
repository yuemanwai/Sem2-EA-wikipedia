{% extends "base2.html.j2" %}
{% block styles %}
    {{ super() }}
    <style>
        .custom-container {
            border: 2px solid rgb(194, 189, 189);
            background-color: rgb(233, 233, 233);
            padding: 10px;
            text-align: center;
        }
    </style>
{% endblock styles %}
{% block read %}
    <div class="custom-container">
        <h3>{{ _('Welcome to') }} <a href="{{ url_for('wiki',title='Wikipedia') }}">{{ _('Wikipedia') }}</a>,</h3>
        {{ _('the free encyclopedia that') }} <a href="{{ url_for('edit') }}">{{ _('anyone can edit.') }}</a>
        <br/>
        <a href="{{ url_for('search') }}">{{ _('%(count)d', count=count) }}</a>{{ _(' articles in English') }} <br/>
    </div>
        {% if post %}
            {% for post in posts %}
                {{ post.body }}
            {% endfor %}
        {% endif %}
{% endblock read %}
